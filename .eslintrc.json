{
    "extends": [
        "eslint:recommended",
        "plugin:jsx-a11y/recommended"
    ],
    "rules": {
        "jsx-a11y/anchor-is-valid": [
            "error",
            {
                "components": [
                    "Link"
                ],
                "specialLink": [
                    "to"
                ]
            }
        ],
        "no-undef": "warn"
    }
}
